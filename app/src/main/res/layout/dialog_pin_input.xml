<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Theme.Holo.Light.Dialog.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pin_input_bg">


    <ImageView
        android:layout_width="@dimen/pin_box_icon_size"
        android:layout_height="@dimen/pin_box_icon_size"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/pin_box_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pin_box_icon_size"
        android:layout_toRightOf="@id/pin_box_icon"
        android:layout_alignTop="@id/pin_box_icon"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="请输入密码"
        android:textSize="20sp"
        android:textColor="#00B9FD"
        android:id="@+id/pin_box_title"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/pin_box_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/pin_box_title"
        android:layout_marginTop="10dp"
        android:background="#EBEBEB"
        android:id="@+id/pin_box_title_divider"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="这是一个不想成为咸鱼的app"
        android:textColor="#353535"
        android:layout_below="@id/pin_box_title_divider"
        android:layout_marginTop="20dp"
        />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pin_input_box_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pin_box_title_divider"
        android:layout_marginTop="50dp"
        android:id="@+id/pin_boxes"
        >
        <TableRow>
            <View
                android:layout_width="@dimen/pin_box_size"
                android:layout_height="@dimen/pin_box_size"
                android:id="@+id/pin_box_1"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/pin_box_divider_height"
                android:layout_marginTop="1dp"
                android:background="#EFEFEF"
                />

            <View
                android:layout_width="@dimen/pin_box_size"
                android:layout_height="@dimen/pin_box_size"
                android:id="@+id/pin_box_2"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/pin_box_divider_height"
                android:layout_marginTop="1dp"
                android:background="#EFEFEF"
                />

            <View
                android:layout_width="@dimen/pin_box_size"
                android:layout_height="@dimen/pin_box_size"
                android:id="@+id/pin_box_3"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/pin_box_divider_height"
                android:layout_marginTop="1dp"
                android:background="#EFEFEF"
                />

            <View
                android:layout_width="@dimen/pin_box_size"
                android:layout_height="@dimen/pin_box_size"
                android:id="@+id/pin_box_4"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/pin_box_divider_height"
                android:layout_marginTop="1dp"
                android:background="#EFEFEF"
                />

            <View
                android:layout_width="@dimen/pin_box_size"
                android:layout_height="@dimen/pin_box_size"
                android:id="@+id/pin_box_5"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/pin_box_divider_height"
                android:layout_marginTop="1dp"
                android:background="#EFEFEF"
                />
            <View
                android:layout_width="@dimen/pin_box_size"
                android:layout_height="@dimen/pin_box_size"
                android:id="@+id/pin_box_6"
                />

        </TableRow>

        </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="2sp"
        android:text="这是一行很坑爹的占位行"
        android:textColor="#000000"
        android:layout_below="@id/pin_boxes"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>